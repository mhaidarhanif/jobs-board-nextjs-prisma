generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id   String @id @default(ulid())
  slug String @unique

  title       String
  description String
  company     String
  location    String
  salaryMin   Int
  salaryMax   Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
